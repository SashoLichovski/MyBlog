@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    var forDisable = "";
    if (ViewBag.header != "X-news Presents")
    {
        forDisable = "disable";
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>MyBlog</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/gallery.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/Hover-master/Hover-master/css/hover.css" rel="stylesheet" />
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <a class="navbar-brand text-light hvr-buzz-out" asp-controller="Post" asp-action="Index" ><h3>X - News</h3></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item hvr-grow-rotate">
                    <a class="nav-link text-light navLink" asp-controller="Post" asp-action="Index">Home</a>
                </li>
                <li class="nav-item hvr-grow-rotate">
                    <a class="nav-link text-light navLink" asp-controller="Info" asp-action="AboutUs">About Us</a>
                </li>
                <li class="nav-item hvr-grow-rotate">
                    <a class="nav-link text-light navLink" asp-controller="Gallery" asp-action="Overview">Gallery</a>
                </li>
                <li class="nav-item hvr-grow-rotate">
                    <a class="nav-link text-light navLink" asp-controller="Post" asp-action="CreatePost">Add post</a>
                </li>
            </ul>
            <form asp-controller="Post" asp-action="Index" >
                <input name="Title" value="" placeholder="Title search" id="searchInput" @forDisable/>
                <input type="submit" value="Search" id="searchBtn" @forDisable/>
            </form>
        </div>
    </nav>

    <div id="headerContainer">
        <h2 id="header">@ViewBag.header</h2>
    </div>

    <div>
        @RenderBody();
    </div>




    <script src="~/Hover-master/Hover-master/Gruntfile.js"></script>
    <script src="~/js/site.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>
</html>
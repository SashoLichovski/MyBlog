@{
    Layout = "_Layout";
}

<div class="container" style="text-align: center; width: 50%;">
    <img src="@Model.ImageUrl" />
    <h1>@Model.Title</h1>
    <p>@Model.Description</p>
    <iframe width="420" height="315"
            src="https://www.youtube.com/embed/@Model.VideoUrl">
    </iframe>
    <div>
        <span>@Model.DatePosted</span>
    </div>
</div>
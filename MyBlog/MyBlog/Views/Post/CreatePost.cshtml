@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MyBlog.Data.Post
@{ 
    Layout = "_Layout";
}
<style>
    
</style>
<div class="formContainer">
    <form asp-controller="Post" asp-action="CreatePost">

        <label asp-for="Title" class="control-label">Title</label>
        <input asp-for="Title" class="form-control" />

        <label asp-for="Description" class="control-label">Description</label>
        <input asp-for="Description" class="form-control" />

        <label asp-for="ImageUrl" class="control-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />

        <label asp-for="VideoUrl" class="control-label">Video URL</label>
        <input asp-for="VideoUrl" class="form-control" />

        <label asp-for="Category" class="control-label">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="Skate">Skate</option>
            <option value="Snowboard">Snowboard</option>
            <option value="Rollerblade">Rollerblade</option>
        </select>

        <input type="submit" value="Create" class="btn btn-dark" />

        <div asp-validation-summary="All" class="text-danger" style="text-align: start"></div>
    </form>
</div>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<MyBlog.Data.Post>;
@{ 
    Layout = "_Layout";
}

    <div id="managePostContainer">
        <div>
            <a asp-controller="Post" asp-action="CreatePost" class="btn btn-dark" id="addPostBtn">Add Post</a>
            <form asp-controller="Post" asp-action="ManagePosts" id="searchForm" style="margin-bottom: 10px;">
                <input name="Title" value="" placeholder="Title search" id="searchInput" />
                <input type="submit" value="Search" id="searchBtn" />
            </form>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Posts</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr class="hvr-shadow">
                        <td>@post.Title</td>
                        <td>@post.Category</td>
                        <td>
                            <a asp-controller="Post" asp-action="ModifyPost" asp-route-id="@post.Id">Modify</a> |
                            <a asp-controller="Post" asp-action="DeletePost" asp-route-id="@post.Id" onclick="return confirm('Are you sure you want to delete this ?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MyBlog.ViewModels.UserModels.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="formContainer">
    <form asp-controller="User" asp-action="Register">

        <label asp-for="Username" class="control-label">Username</label>
        <input asp-for="Username" class="form-control" />

        <label asp-for="Password" class="control-label">Password</label>
        <input asp-for="Password" class="form-control" />

        <label asp-for="ConfirmPassword" class="control-label">Confirm password</label>
        <input asp-for="ConfirmPassword" class="form-control" />

        <input type="submit" value="Register" class="btn btn-dark" />

        <div asp-validation-summary="All" class="text-danger" style="text-align: start"></div>
    </form>
</div>

